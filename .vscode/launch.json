  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug at kwangya",
      "cwd": "${workspaceRoot}",
      "executable": "build_pico/main.elf",
      "request": "launch",
      "type": "cortex-debug",
      "servertype": "external",
      "gdbPath": "gdb-multiarch",

      "gdbTarget" : "aewinter.kwangya:3333",
      
      //"showDevDebugOutput": "raw",

      "svdFile": "${env:PICO_SDK_PATH}/src/rp2040/hardware_regs/rp2040.svd",
      "runToEntryPoint": "main",
      // Give restart the same functionality as runToEntryPoint - main
      "postRestartCommands": [
          "break main",
          "continue"
      ]
    }
  ]
}
